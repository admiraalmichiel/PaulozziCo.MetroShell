    <!-- TabValidationItemBorder -->
    <SolidColorBrush x:Key="TabValidationItemBorderFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>
    <SolidColorBrush x:Key="TabValidationItemBorderPressedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}" Opacity="0.8"/>

    <!-- TabValidationItemText -->
    <SolidColorBrush x:Key="TabValidationItemTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: CheckBox -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, DisabledBrush -->

    <!-- CheckBoxBorder - The square that contains the check glyph -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"/>
    <SolidColorBrush x:Key="CheckBoxBorderFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.SecundaryAccentColor}"/>
    <SolidColorBrush x:Key="CheckBoxBorderMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.StrongColor}"/>
    <SolidColorBrush x:Key="CheckBoxBorderDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"/>

