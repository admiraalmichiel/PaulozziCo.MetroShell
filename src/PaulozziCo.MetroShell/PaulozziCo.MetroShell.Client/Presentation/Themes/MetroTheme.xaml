    <SolidColorBrush x:Key="ScrollBarThumbBorderDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBarThumbBorderPressedBrush" Color="#FFA5ACB5"/>

    <!-- ScrollBarThumbBackground -->
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundMouseOverBrush" Color="White"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundPressedBrush" Color="#FFE1E2E3"/>

    <!-- ScrollBarThumbGlyph -->
    <SolidColorBrush x:Key="ScrollBarThumbGlyphBrush" Color="#FF333333"/>
    <SolidColorBrush x:Key="ScrollBarThumbGlyphMouseOverBrush" Color="#FF333333"/>
    <SolidColorBrush x:Key="ScrollBarThumbGlyphDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBarThumbGlyphPressedBrush" Color="#FF333333"/>


    <!-- ******************************************************************************** -->
    <!-- The following are Shell Theme colors                                             -->
    <!-- ******************************************************************************** -->

    <!-- ******************************************************************************** -->
    <!-- Control: Ribbon -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, PressedBrush, DisabledBrush -->

    <!-- RibbonBackground - The background of the ribbon menu -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>

    <!-- RibbonButtonText -->
    <SolidColorBrush x:Key="RibbonButtonTextBrush" Color="White" Opacity="0.9"/>
    <SolidColorBrush x:Key="RibbonButtonTextFocusedBrush" Color="White"/>
    <SolidColorBrush x:Key="RibbonButtonTextMouseOverBrush" Color="White"/>
    <SolidColorBrush x:Key="RibbonButtonTextPressedBrush" Color="White"/>


    <!-- RibbonBorder - The border between the ribbon and the screen -->
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="Transparent"/>

    <!-- RibbonSeparator - The separator between groups -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="Transparent"/>
    <!-- RibbonSeparator2 - The padding between the separator and the background.  This appears to be transparent in the spec, meaning that the vertical
         Divider for ribbon groups is a single, one pixel line -->
    <!--Alterado-->
    <SolidColorBrush x:Key="RibbonSeparator2Brush" Color="Transparent"/>
    <!--<SolidColorBrush x:Key="RibbonSeparator2Brush" Color="White"/>-->

    <!-- RibbonGroupText - The text labeling the ribbon group -->
    <SolidColorBrush x:Key="RibbonGroupTextBrush" Color="White"/>

    <!--RibbonButtonBorder.  Appears to be unused in Metro.  (Ditto for mouse over/pressed borders.) -->
    <SolidColorBrush x:Key="RibbonButtonBorderBrush" Color="Transparent"/>

    <!-- RibbonButtonBackground -->
    <SolidColorBrush x:Key="RibbonButtonBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="RibbonButtonBackgroundFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="RibbonButtonBackgroundMouseOverBrush" Color="Transparent"/>

    <!--RibbonDropShadow.  I think there is a drop shadow below in the Ribbon in the metro theme.  Please confirm -->
    <SolidColorBrush x:Key="RibbonDropShadowBrush" Color="Transparent"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Navigation Menu -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, PressedBrush -->

    <!-- NavShellBackground - The color of the area "behind" the screen tab -->
    <SolidColorBrush x:Key="NavShellBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}"/>

    <!-- NavBackground - The background of the navigation menu -->
    <SolidColorBrush x:Key="NavBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicNavigationColor}"/>

    <!-- NavGroupBackground - The buttons that represent navigation groups -->
    <SolidColorBrush x:Key="NavGroupBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupBackgroundFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupBackgroundMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>

    <!-- NavGroupBorder -->
    <SolidColorBrush x:Key="NavGroupBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupBorderFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupBorderMouseOverBrush" Color="Transparent"/>
    <!-- NavGroupInnerBorder - An inner glow on a selected nav group -->
    <SolidColorBrush x:Key="NavGroupInnerBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupInnerBorderFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavGroupInnerBorderMouseOverBrush" Color="Transparent"/>

    <!-- NavGroupText -->
    <SolidColorBrush x:Key="NavGroupTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}" />
    <SolidColorBrush x:Key="NavGroupTextFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}" />
    <SolidColorBrush x:Key="NavGroupTextMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.MainColor}" />

    <!-- NavItemBackground - The buttons that represent navigation items. Clicking opens a screen. -->
    <SolidColorBrush x:Key="NavItemBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavItemBackgroundFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>
    <SolidColorBrush x:Key="NavItemBackgroundMouseOverBrush"  Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="NavItemBackgroundPressedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>

    <!-- NavItemBorder -->
    <SolidColorBrush x:Key="NavItemBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavItemBorderFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavItemBorderMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="NavItemBorderPressedBrush" Color="Transparent"/>

    <!-- NavItemText -->
    <SolidColorBrush x:Key="NavItemTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="NavItemTextFocusedBrush" Color="White"/>
    <SolidColorBrush x:Key="NavItemTextMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="NavItemTextPressedBrush" Color="White"/>

    <!-- ******************************************************************************** -->
    <!-- Control: ScreenTab -->
    <!-- States:  NormalBrush, MouseOverBrush, ActiveBrush -->

    <!-- ScreenTabBorder - The border around the entire screen tab -->
    <SolidColorBrush x:Key="ScreenTabBorderBrush" Color="Transparent"/>

    <!-- ScreenTabBackground - The background of just the tab header -->
    <SolidColorBrush x:Key="ScreenTabBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ScreenTabBackgroundMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}" Opacity="0.2" />

    <!-- ScreenTabText - The text of the tab header -->
    <SolidColorBrush x:Key="ScreenTabTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="ScreenTabTextMouseOverBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ScreenTabTextActiveBrush" Color="White"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Shell Component -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, DisabledBrush, PressedBrush -->

    <!-- ShellGlyphButtonBorder - The small button used to expand the nav menu/the ribbon/close a tab/close modal window -->
    <SolidColorBrush x:Key="ShellGlyphButtonBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBorderFocusedBrush" Color="Transparent"/>

    <SolidColorBrush x:Key="ShellGlyphButtonBorderMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBorderDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBorderPressedBrush" Color="Transparent"/>

    <!-- ShellGlyphButtonBackground -->
    <SolidColorBrush x:Key="ShellGlyphButtonBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBackgroundFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBackgroundMouseOverBrush" Color="Transparent"/>

    <SolidColorBrush x:Key="ShellGlyphButtonBackgroundDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ShellGlyphButtonBackgroundPressedBrush" Color="Transparent"/>

    <!-- ShellGlyphButtonArrowGlyph - The color of the expand/collapse arrow -->
    <SolidColorBrush x:Key="ShellGlyphButtonArrowGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ShellGlyphButtonCloseGlyph - The color of the screen close glyph -->
    <SolidColorBrush x:Key="ShellGlyphButtonCloseGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Validation Popup - The floating message that appears over a control when an error exists in the control. -->
    <!-- States:  NormalBrush -->

    <!-- ValidationPopupBackgroundBrush - Not used in this theme. -->
    <SolidColorBrush x:Key="ValidationPopupBackgroundBrushBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}"/>

    <!-- ValidationPopupErrorBackground - Validation popup background while displaying validation errrors (and warnings).(cosmopolitan theme specific) -->
    <SolidColorBrush x:Key="ValidationPopupErrorBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}"/>

    <!-- ValidationPopupMessageBackground - Validation popup background while displaying validation warning and information (no errors). (cosmopolitan theme specific) -->
    <SolidColorBrush x:Key="ValidationPopupMessageBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}"/>

    <!-- ValidationPopupText - The text color -->
    <SolidColorBrush x:Key="ValidationPopupTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ValidationPopupErrorBorder - The border used when the message is an error -->
    <SolidColorBrush x:Key="ValidationPopupErrorBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>

    <!-- ValidationPopupMessageBorder - The border used when the message is an informative message -->
    <SolidColorBrush x:Key="ValidationPopupMessageBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Screen Tab Validation - The control that appears at the top of a screen when validation errors occur. This has a header and an popup list of errors that can be clicked on. -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, PressedBrush -->

    <!-- TabValidationBackground - The background of the validation header. -->
    <SolidColorBrush x:Key="TabValidationBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>
    <SolidColorBrush x:Key="TabValidationBackgroundMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}" Opacity="0.8"/>
    <SolidColorBrush x:Key="TabValidationBackgroundPressedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>

    <!-- TabValidationBorder -->
    <SolidColorBrush x:Key="TabValidationBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>
    <SolidColorBrush x:Key="TabValidationBorderFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>
    <SolidColorBrush x:Key="TabValidationBorderMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}" Opacity="0.8"/>
    <SolidColorBrush x:Key="TabValidationBorderPressedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}" Opacity="0.6"/>

    <!-- TabValidationGlyph - The glyph that expands the popup -->
    <SolidColorBrush x:Key="TabValidationGlyphBrush" Color="White"/>

    <!-- TabValidationText -->
    <SolidColorBrush x:Key="TabValidationTextBrush" Color="White"/>

    <!-- TabValidationItemBackground - The background of an individual validation error -->
    <SolidColorBrush x:Key="TabValidationItemBackgroundMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="TabValidationItemBackgroundPressedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"
