    <SolidColorBrush x:Key="ToolbarSeparatorBrush" Color="Transparent"/>

    <!-- ToolbarButtonBorder -->
    <SolidColorBrush x:Key="ToolbarButtonBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBorderFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBorderMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBorderDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBorderPressedBrush" Color="Transparent"/>

    <!-- ToolbarButtonBackground -->
    <SolidColorBrush x:Key="ToolbarButtonBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBackgroundFocusedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBackgroundMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ToolbarButtonBackgroundPressedBrush" Color="Transparent"/>

