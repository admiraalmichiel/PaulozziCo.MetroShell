    <SolidColorBrush x:Key="ChromeBorderDropShaddowBrush" Color="#363637" Opacity="0.3"/>

    <SolidColorBrush x:Key="ModalDialogBackgroundBrush" Color="White"/>

    <!--  Validation Viewer -->
    <LinearGradientBrush x:Key="InformationPopupBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF"/>
        <GradientStop Color="#FFFFF4DB" Offset="1"/>
    </LinearGradientBrush>

