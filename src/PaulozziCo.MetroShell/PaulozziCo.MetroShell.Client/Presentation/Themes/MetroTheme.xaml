    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" />
    <SolidColorBrush x:Key="CheckBoxBackgroundDisabledBrush" Color="Transparent"/>

    <!-- CheckBoxGlyph - The color of the check glyph -->
    <SolidColorBrush x:Key="CheckBoxGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="CheckBoxGlyphDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.StrongColor}"/>


    <!-- ******************************************************************************** -->
    <!-- Control: Modal Window -->
    <!-- States:  NormalBrush -->

    <!-- WindowTitleBackground - The background of the title bar -->
    <SolidColorBrush x:Key="WindowTitleBackgroundBrush" 
