    <SolidColorBrush x:Key="ToolbarButtonTextDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.StrongColor}" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.5'}"/>
