<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:PaulozziCo.MetroShell.Presentation.Shells" 
    xmlns:model="clr-namespace:PaulozziCo.MetroShell.Model"
    xmlns:converters="clr-namespace:PaulozziCo.MetroShell.Presentation.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PaulozziCo.MetroShell.Client;component/Presentation/Themes/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <converters:BackgroundStyleToOpacityConverter x:Key="BackgroundStyleToOpacityConverter" />

    <DropShadowEffect x:Key="DropShadowBrush" Direction="330" Opacity="0.3" ShadowDepth="0" BlurRadius="6"/>
    
    <SolidColorBrush x:Key="DetailsBorderColor" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}" />

    <!-- Font Settings -->
    <sys:Double x:Key="NormalFontSize">11</sys:Double>
    <FontFamily x:Key="NormalFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/seguisb.ttf#Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="NormalFontWeight">Normal</FontWeight>
    <FontStyle x:Key="NormalFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="NormalFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="NormalFontBackgroundBrush" Color="Transparent"/>

    <sys:Double x:Key="Heading1FontSize">24</sys:Double>
    <FontFamily x:Key="Heading1FontFamily">Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="Heading1FontWeight">Bold</FontWeight>
    <FontStyle x:Key="Heading1FontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="Heading1FontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="Heading1FontBackgroundBrush" Color="Transparent"/>

    <sys:Double x:Key="Heading2FontSize">26.667</sys:Double>
    <FontFamily x:Key="Heading2FontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/segoeuil.ttf#Segoe UI Light</FontFamily>
    <FontWeight x:Key="Heading2FontWeight">Normal</FontWeight>
    <FontStyle x:Key="Heading2FontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="Heading2FontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="Heading2FontBackgroundBrush" Color="Transparent"/>

    <sys:Double x:Key="StrongFontSize">11</sys:Double>
    <FontFamily x:Key="StrongFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/seguisb.ttf#Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="StrongFontWeight">Bold</FontWeight>
    <FontStyle x:Key="StrongFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="StrongFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="StrongFontBackgroundBrush" Color="Transparent"/>


    <sys:Double x:Key="EmphasisFontSize">14</sys:Double>
    <FontFamily x:Key="EmphasisFontFamily">Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="EmphasisFontWeight">Normal</FontWeight>
    <FontStyle x:Key="EmphasisFontStyle">Italic</FontStyle>
    <SolidColorBrush x:Key="EmphasisFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>
    <SolidColorBrush x:Key="EmphasisFontBackgroundBrush" Color="Transparent"/>

    <sys:Double x:Key="WarningFontSize">11</sys:Double>
    <FontFamily x:Key="WarningFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/seguisb.ttf#Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="WarningFontWeight">Bold</FontWeight>
    <FontStyle x:Key="WarningFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="WarningFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>
    <SolidColorBrush x:Key="WarningFontBackgroundBrush" Color="#FFFFC7CE"/>

    <sys:Double x:Key="NoteFontSize">9</sys:Double>
    <FontFamily x:Key="NoteFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/seguisb.ttf#Segoe UI Semibold</FontFamily>
    <FontWeight x:Key="NoteFontWeight">Normal</FontWeight>
    <FontStyle x:Key="NoteFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="NoteFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="NoteFontBackgroundBrush" Color="Transparent"/>

    <!-- Font Style: Good -->
    <!-- Generally green -->
    <FontFamily x:Key="GoodFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/segoeui.ttf#Segoe UI</FontFamily>
    <sys:Double x:Key="GoodFontSize">11</sys:Double>
    <FontWeight x:Key="GoodFontWeight">Normal</FontWeight>
    <FontStyle x:Key="GoodFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="GoodFontBrush" Color="#FF006100"/>
    <SolidColorBrush x:Key="GoodFontBackgroundBrush" Color="#FFC6EFCE"/>

    <!-- Font Style: Bad -->
    <!-- Generally red -->
    <FontFamily x:Key="BadFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/segoeui.ttf#Segoe UI</FontFamily>
    <sys:Double x:Key="BadFontSize">11</sys:Double>
    <FontWeight x:Key="BadFontWeight">Normal</FontWeight>
    <FontStyle x:Key="BadFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="BadFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="BadFontBackgroundBrush" Color="#FFFFC7CE"/>

    <!-- Error Brush -->
    <SolidColorBrush x:Key="ErrorHighlightBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.ValidationColor}"/>

    <!-- Validation Popup background -->
    <LinearGradientBrush x:Key="ValidationPopUpBackground"  EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFDC2528" Offset="0"/>
        <GradientStop Color="#FFED4030" Offset="1"/>
    </LinearGradientBrush>
    <!-- Font Style: Neutral -->
    <!-- Generally yellow/brown -->
    <FontFamily x:Key="NeutralFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/segoeui.ttf#Segoe UI</FontFamily>
    <sys:Double x:Key="NeutralFontSize">11</sys:Double>
    <FontWeight x:Key="NeutralFontWeight">Normal</FontWeight>
    <FontStyle x:Key="NeutralFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="NeutralFontBrush" Color="#FFAD653E"/>
    <SolidColorBrush x:Key="NeutralFontBackgroundBrush" Color="#FFFFEB9C"/>

    <!-- Font Style: ToolTip -->
    <!-- Style used for tooltips -->
    <FontFamily x:Key="ToolTipFontFamily">/PaulozziCo.MetroShell.Client;component/Presentation/Fonts/segoeui.ttf#Segoe UI</FontFamily>
    <sys:Double x:Key="ToolTipFontSize">11</sys:Double>
    <FontWeight x:Key="ToolTipFontWeight">Normal</FontWeight>
    <FontStyle x:Key="ToolTipFontStyle">Normal</FontStyle>
    <SolidColorBrush x:Key="ToolTipFontBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="ToolTipFontBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Screen -->
    <!-- States:  NormalBrush -->

    <!-- ScreenBackground - The background of the screen. -->
    <SolidColorBrush x:Key="ScreenBackgroundBrush" Color="{Binding Path=Palette.DynamicBackgroundColor, Source={StaticResource ThemeColors}}"/>


    <!-- ScreenLoadingBackground - The background of a control that is loading -->
    <SolidColorBrush x:Key="ScreenLoadingBackgroundBrush" Color="White" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.5'}"/>


    <!-- ScreenControlBorder - The border of a control that is not based on another control already defined -->
    <SolidColorBrush x:Key="ScreenControlBorderBrush" Color="Transparent"/>

    <!-- Control: Button -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, DisabledBrush, PressedBrush -->

    <!-- ButtonBorder -->
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#19000000"/>
    <SolidColorBrush x:Key="ButtonBorderDisabledBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#404040"/>

    <LinearGradientBrush x:Key="ButtonBorderFocusedBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#19FFFFFF" Offset="0"/>
        <GradientStop Color="#19000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBorderPressedBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#19FFFFFF" Offset="0"/>
        <GradientStop Color="#19000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBorderMouseOverBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#19FFFFFF" Offset="0"/>
        <GradientStop Color="#19000000" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFCCCCCC"/>
    <!-- This brush is not used by the Metro theme -->
    <LinearGradientBrush x:Key="ButtonBackgroundFocusedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF9F9F9" Offset="0"/>
        <GradientStop Color="#FFEBEBEB" Offset="0.49"/>
        <GradientStop Color="#FFDBDBDB" Offset="0.5"/>
        <GradientStop Color="#FFE7E7E7" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ButtonBackgroundMouseOverBrush" Color="#FFDEDEDE"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressedBrush" Color="#FFDEDEDE"/>
    <RadialGradientBrush x:Key="ButtonBackgroundOverlayEffectBrush" Opacity="0.3">
        <GradientStop Color="#19000000" Offset="0"/>
        <GradientStop Color="#19FFFFFF" Offset="1"/>
    </RadialGradientBrush>
    <!-- This brush is not used by the Metro theme-->
    <SolidColorBrush x:Key="ButtonBackgroundDisabledBrush" Color="#FFF4F4F4"/>


    <!-- ButtonText -->
    <SolidColorBrush x:Key="ButtonTextBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="ButtonTextMouseOverBrush" Color="#FF232323"/>

    <!-- This brush is not used by the Metro theme -->
    <LinearGradientBrush x:Key="ButtonBackgroundWaveEffectBrush" StartPoint="0,0" EndPoint="1,0" Opacity="0.4">
        <GradientStop Color="White"/>
        <GradientStop Color="#4CFCFAFA" Offset="1"/>
    </LinearGradientBrush>

    <!-- ButtonGlyph - The foreground color of a non-icon glyph such as a down arrow. -->
    <SolidColorBrush x:Key="ButtonGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ButtonGlyphBorder - The border around the glyph -->
    <SolidColorBrush x:Key="ButtonGlyphBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ButtonFocusBorder - Some themes may display a rectangle around the text content but inside of the border when the button has keyboard focus. -->
    <SolidColorBrush x:Key="ButtonFocusBorderFocusedBrush" Color="Transparent"/>

    <!-- ******************************************************************************** -->
    <!-- Control: TextBox - The selected state is used for the color of selected text in the textbox. -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, DisabledBrush, ReadOnlyBrush, SelectedBrush -->

    <!-- TextBoxBorder -->
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.6'}"/>
    <!--Substituido para cores de detalhe do tema-->
    <SolidColorBrush x:Key="TextBoxBorderFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.StrongColor}"/>
    <SolidColorBrush x:Key="TextBoxBorderMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.StrongColor}"/>
    <SolidColorBrush x:Key="TextBoxBorderDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" Opacity="0.6"/>
    <SolidColorBrush x:Key="TextBoxBorderReadOnlyBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" Opacity="0.6"/>

    <!-- TextBoxBackground -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxBackgroundFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxBackgroundMouseOverBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxBackgroundDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" Opacity="0.5"/>
    <SolidColorBrush x:Key="TextBoxBackgroundReadOnlyBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" Opacity="0.5"/>
    <SolidColorBrush x:Key="TextBoxBackgroundSelectedBrush" Color="#FF6593CF"/>

    <!-- TextBoxText -->
    <SolidColorBrush x:Key="TextBoxTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="TextBoxTextDisabledBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="TextBoxTextReadOnlyBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="TextBoxTextSelectedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- TextBoxInfoText - The color of text that appears as a hint or default value. Usually a lighter color and in italics. -->
    <SolidColorBrush x:Key="TextBoxInfoTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- TextBoxCaret - The color of the text entry caret (the blinking thing) -->
    <SolidColorBrush x:Key="TextBoxCaretBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <!-- ******************************************************************************** -->
    <!-- Control: ComboBox/TextBox Button - In this case the 'Normal' state is displayed when the TextBox has focus or if another area of the TextBox is MouseOver -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, PressedBrush -->

    <!-- TextBoxButtonBackground - A button that appears in the boundary of the textbox and can get keyboard focus. Like search button in Grid/List -->
    <LinearGradientBrush x:Key="TextBoxButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF7F7F7" Offset="0"/>
        <GradientStop Color="#FFE7E7E7" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="TextBoxButtonBackgroundFocusedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF7F7F7" Offset="0"/>
        <GradientStop Color="#FFE7E7E7" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="TextBoxButtonBackgroundMouseOverBrush" Color="LightGray" Opacity="0.3"/>
    <SolidColorBrush x:Key="TextBoxButtonBackgroundPressedBrush" Color="LightGray" Opacity="0.4"/>

    <!-- TextBoxButtonBorder -->
    <SolidColorBrush x:Key="TextBoxButtonBorderFocusedBrush" Color="LightGray" Opacity="0.4"/>
    <SolidColorBrush x:Key="TextBoxButtonBorderMouseOverBrush" Color="LightGray" Opacity="0.4"/>
    <SolidColorBrush x:Key="TextBoxButtonBorderPressedBrush" Color="LightGray" Opacity="0.2"/>

    <!-- TextBoxButtonGlyph - Text or glyph color -->
    <SolidColorBrush x:Key="TextBoxButtonGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- Control Brushes -->
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="ControlHighlightBorderBrush" Color="#fb9141"/>
    <SolidColorBrush x:Key="ControlMouseOverBorderBrush" Color="#FFB1A9A6"/>
    <SolidColorBrush x:Key="ModalDialogInnerBackgroundBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ControlReadOnlyHighlightBorderBrush" Color="#7F7F7F"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#72F7F7F7"/>
    <SolidColorBrush x:Key="ControlDisabledBorderBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ControlBorderInnerGrowBrush" Color="#454751" Opacity="0.3"/>
    <SolidColorBrush x:Key="ControlProcessingBrush" Color="#FFF7F7F7"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#72F7F7F7"/>

    <SolidColorBrush x:Key="ControlSelectedBackgroundBrush" Color="#fee19c"/>
    <SolidColorBrush x:Key="ControlSoftSelectedBackgroundBrush" Color="#dddddd"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextForegroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <SolidColorBrush x:Key="TextBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TextBorderBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}"/>
    <SolidColorBrush x:Key="TextDisabledBorderBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="TextHighlightBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextReadOnlyBrush" Color="#9F9F9F"/>
    <SolidColorBrush x:Key="TextSelectionForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextSelectionBackgroundBrush" Color="#6593CF"/>
    <SolidColorBrush x:Key="CaretBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <SolidColorBrush x:Key="LinkForegroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Link -->
    <!-- States:  NormalBrush, FocusedBrush -->
    <!-- LinkText -->
    <SolidColorBrush x:Key="LinkTextBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>
    <SolidColorBrush x:Key="LinkTextFocusedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.AccentColor}"/>

    <!-- LinkFocusBorder - Some themes may display a rectangle around the link to indicate it has keyboard foucs. -->
    <SolidColorBrush x:Key="LinkFocusBorderFocusedBrush" Color="Transparent"/>

    <!-- Dropdown Brushes -->
    <SolidColorBrush x:Key="DropDownBackground" Color="Transparent"/>
    <!--Only for this theme-->
    <SolidColorBrush x:Key="DropDownGlyphFillBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>
    <!-- Grid / List Brushes -->
    <SolidColorBrush x:Key="EditedRowBaseBrush" Color="#FFFDF5D7" />
    <SolidColorBrush x:Key="AddedRowBaseBrush" Color="#FFFDF5D7" />
    <SolidColorBrush x:Key="DeletedRowBaseBrush" Color="#FFFDF5D7" />
    <SolidColorBrush x:Key="DataGridBackground" Color="White"/>


    <!-- ******************************************************************************** -->
    <!-- Control: List/Grid - The drag state appears when the column header is dragged, the Border is used for the drop position color -->
    <!-- States:  NormalBrush, FocusedBrush, MouseOverBrush, PressedBrush, DraggedBrush -->

    <!-- ListHeaderBackground - The header at the top of a list/grid that shows the column header and can be clicked on the change sorting -->
    <SolidColorBrush x:Key="ListHeaderBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundFocusedBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundMouseOverBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundPressedBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundDraggedBrush" Color="#66808080"/>

    <!-- ListHeaderBorder - Separator between columns, in grid also used as grid lines -->
    <SolidColorBrush x:Key="ListHeaderBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListHeaderBorderFocusedBrush" Color="#FFC2C2C2"/>
    <SolidColorBrush x:Key="ListHeaderBorderMouseOverBrush" Color="#FFC2C2C2"/>
    <SolidColorBrush x:Key="ListHeaderBorderPressedBrush" Color="#FFC2C2C2"/>
    <SolidColorBrush x:Key="ListHeaderBorderDraggedBrush" Color="#FFFB9141"/>

    <!-- ******************************************************************************** -->
    <!-- Control: List -->
    <!-- States:  NormalBrush, MouseOverBrush, SelectedBrush, UnfocusedSelectedBrush, MouseOverSelectedBrush -->

    <!-- ListRowBackground - The background of a list row -->
    <SolidColorBrush x:Key="ListRowBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}"/>
    <SolidColorBrush x:Key="ListRowBackgroundMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListRowBackgroundSelectedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="ListRowBackgroundUnfocusedSelectedBrush" Color="#FFDDDDDD" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="ListRowBackgroundMouseOverSelectedBrush" Color="#FFC4DCF7" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>

    <!-- ListRowBorder - The border around the entire row. Not used for our standard theme. But useful on high contrast. -->
    <SolidColorBrush x:Key="ListRowBorderBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListRowBorderMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListRowBorderSelectedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListRowBorderUnfocusedSelectedBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListRowBorderMouseOverSelectedBrush" Color="Transparent"/>

    <!-- ListRowSeparator - The horizontal line displayed between two rows -->
    <SolidColorBrush x:Key="ListRowSeparatorBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>

    <!--exclusive to this theme-->
    <SolidColorBrush x:Key="CurrentRowGlyphBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- ******************************************************************************** -->
    <!-- Control: Grid -->
    <!-- States:  NormalBrush, MouseOverBrush, SelectedBrush, UnfocusedSelectedBrush, MouseOverSelectedBrush -->

    <!--Only for this theme-->
    <SolidColorBrush x:Key="GridBackground" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicBackgroundColor}" />
    <SolidColorBrush x:Key="GridHeaderForeground" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicMarkerColor}"/>

    <!-- GridRowBackground - The background of a grid row -->
    <SolidColorBrush x:Key="GridRowBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.DynamicControlBackgroundColor}" />
    <SolidColorBrush x:Key="GridRowBackgroundMouseOverBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="GridRowBackgroundSelectedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="GridRowBackgroundUnfocusedSelectedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>
    <SolidColorBrush x:Key="GridRowBackgroundMouseOverSelectedBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.3'}"/>

    <!-- GridAlternateRowBackground - The alternating background of a grid row. This is only used in the Normal state, the colors from GridRowBackground1 are used for other states. -->
    <SolidColorBrush x:Key="GridAlternateRowBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" 
                     Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.1'}"/>
    <!-- GridRowBorder -->

    <!-- GridActiveCellBorder - Border displayed around a selected cell (even when the grid isnâ€™t focused) -->
    <SolidColorBrush x:Key="GridActiveCellBorderBrush" Color="#FF7DA2CE"/>

    <!-- GridEditedBackground - The background of a row after the record is edited -->
    <SolidColorBrush x:Key="GridEditedBackgroundBrush" Color="#FFF9F9F9"/>

    <!-- GridAddedBackground - The background of a row after the record is created -->
    <SolidColorBrush x:Key="GridAddedBackgroundBrush" Color="#FFF9F9F9"/>

    <!-- GridDeletedBackground - The background of a row after the record is deleted -->
    <SolidColorBrush x:Key="GridDeletedBackgroundBrush" Color="#FFF9F9F9"/>


    <!-- The following brushes are specific to the Metro theme. -->
    <SolidColorBrush x:Key="AlternatingRowBackground" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.SecundaryAccentColor}" Opacity="0.2"/>
    <SolidColorBrush x:Key="ListAndGridBorderBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="CommandPresenterBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="DataGridSeparatorBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ListSeparatorBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="CollectionButtonSeparatorBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="DataGridRowHeaderBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="NormalRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="SelectedRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="SelectedRowOutline" Color="Transparent"/>
    <SolidColorBrush x:Key="ActiveCellBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ActiveCellOutline" Color="Transparent"/>
    <SolidColorBrush x:Key="MouseOverRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="MouseOverRowOutline" Color="Transparent"/>
    <SolidColorBrush x:Key="SoftSelectRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="SoftSelectRowOutline" Color="Transparent"/>

    <SolidColorBrush x:Key="ListRowMouseOverBackground" Color="Transparent"/>

    <SolidColorBrush x:Key="ListRowPressedBackground" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.BasicColor}" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0.2'}"/>

