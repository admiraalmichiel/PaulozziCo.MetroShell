    <!-- ToolbarBackground - The background of the toolbar -->
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{Binding Source={StaticResource ThemeColors}, Path=Palette.MainColor}" Opacity="{Binding Source={StaticResource ThemeColors}, Path=Palette.BackgroudStyle, Converter={StaticResource BackgroundStyleToOpacityConverter}, ConverterParameter='0'}"/>

